@startuml
top to bottom direction
skinparam packageStyle rectangle
skinparam linetype ortho
skinparam nodesep 50
skinparam ranksep 60

' ================= USERS =================
package "Users" {

  class User {
    userId: UUID
    fullName: String
    email: String
    phone: String
  }

  class Host {
    hostRating: float
    isVerified: boolean
  }

  class Renter {
    renterRating: float
  }

  User <|-- Host
  User <|-- Renter
}

' ================= LISTINGS =================
package "Listings" {

  class Listing {
    listingId: UUID
    title: String
    description: String
    pricePerDay: float
  }

  class PropertyListing {
    bedrooms: int
    bathrooms: int
    maxGuests: int
  }

  class EquipmentListing {
    category: String
    condition: String
  }

  class AvailabilitySlot {
    startDate: Date
    endDate: Date
    isAvailable: boolean
  }

  Listing <|-- PropertyListing
  Listing <|-- EquipmentListing
  Listing "1" -- "0..*" AvailabilitySlot
}

' ================= BOOKINGS =================
package "Bookings" {

  class Booking {
    bookingId: UUID
    startDate: Date
    endDate: Date
    totalAmount: float
  }

}

' ================= PAYMENTS =================
package "Payments" {

  class Payment {
    paymentId: UUID
    amount: float
    paidAt: DateTime
  }


}

' ================= REVIEWS =================
package "Reviews" {

  class Review {
    reviewId: UUID
    rating: int
    comment: String
    createdAt: DateTime
  }
}

' ================= RELATIONSHIPS =================

Host "1" -- "0..*" Listing : creates
Renter "1" -- "0..*" Booking : makes
Listing "1" -- "0..*" Booking : for
Booking "1" -- "0..1" Payment : has
Renter "1" -- "0..*" Review : writes
Listing "1" -- "0..*" Review : receives

@enduml
